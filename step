key_left = keyboard_check(vk_left);//declares variable - left arrow key moves left
key_right = keyboard_check(vk_right);//delcares variable - right arrow key moves right
key_jump = keyboard_check_pressed(vk_space);//declares variable - spacebar activates jump

var move = key_right - key_left;//variable move - moves player right or left depending on arrow key

hsp = move * walksp;//variable hsp - horizontal moving, x-axis;

vsp = vsp + grv;//gravity 

if(place_meeting(x, y + 1, oWall)) && (key_jump)//if statement for gravity
{
	vsp = -7;
	
}




//Horizontal Collsion
if (place_meeting(x+hsp,y,oWall))
{
	while(!place_meeting(x+sign(hsp),y,oWall))
	{
		x = x + sign(hsp);
	}
	
	hsp = 0;
}

x = x + hsp;//moves 4 pixels right or left depending on arrow key pressed

//Vertical Collision
if (place_meeting(x, y + vsp, oWall))
{
	while(!place_meeting(x, y + sign(vsp), oWall))
	{
		y = y + sign(vsp);
	}
	
	vsp = 0;
	
}

y = y + vsp;//moves 4 pixels up or down depending on arrow key pressed;

